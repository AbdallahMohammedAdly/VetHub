@model List<ArticleViewModel>
@{
    ViewData["Title"] = "Article";
}

<h1> Article Data </h1>


<hr />

@if (Model?.Count() > 0)
{

    <div class="container">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                       Title
                    </th>
                    <th>
                        TimeOfArticle
                    </th>
                    <th>
                        UserId
                    </th>
                   <th>
                       Edit
                   </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Article in Model)
                {
                    <tr>
                        <td>@Article.Id</td>
                        <td>@Article.Title</td>

                        <td>@Article.TimeOfArticle.ToShortTimeString()@Article.TimeOfArticle.ToShortDateString()</td>

                        <td>@Article.UserId</td>
                      
                        <td>
                            <a class="btn btn-success" asp-action="Edit" asp-route-id="@Article.Id">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                     
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="mt-3 p-3 alert-warning">
        <h2>
            There is no Recored
        </h2>
    </div>
}
@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
}
