@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Index";
}

<h1 class="m-2">All Roles </h1>
<hr />

<partial name="RoleForm" model="new RoleFormViewModel()"></partial>

@if(Model?.Count()>0){
    <table>
        <thead>
       <tr>
           <th>@Html.DisplayNameFor(r=>r.Id)</th>
            <th>@Html.DisplayNameFor(r => r.Name)</th>
            <th>Actions</th>


       </tr>
        </thead>
        <tbody>
            @foreach(var item in Model){
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        <a class="btn btn-outline-waring" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                
                </tr>
            }
        </tbody>
    </table>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
}