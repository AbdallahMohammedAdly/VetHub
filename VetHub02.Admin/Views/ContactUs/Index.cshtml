@model IEnumerable<ContactUsVeiwModel>
@{
    ViewData["Title"] = "ContactUs";
}

<h1>All ContactUs</h1>

<hr />

@if (Model?.Any() == true)
{
    <div class="container">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(u => u.Id)</th>
                    <th>@Html.DisplayNameFor(u => u.Name)</th>
                    <th>@Html.DisplayNameFor(u => u.Email)</th>
                    <th>@Html.DisplayNameFor(u => u.PhoneNumber)</th>
                    <th>@Html.DisplayNameFor(u => u.Message)</th>
                    <th>@Html.DisplayNameFor(u => u.DateOfCreate)</th>

                  
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>@user.PhoneNumber</td>
                        <th>@user.Message</th>
                        <th>@user.DateOfCreate</th>


                       
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="mt-3 p-3 alert-warning">
        <h2>There are no records</h2>
    </div>
}

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
