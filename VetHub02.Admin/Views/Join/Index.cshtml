@model IEnumerable<JoinViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All Users Join US as A doctor</h1>

<hr />

@if (Model?.Count() > 0)
{

    <div class="container">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(u => u.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(u => u.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(u => u.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(u => u.PhoneNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(u => u.Gender)
                    </th>
                    <th>
                        @Html.DisplayNameFor(u => u.DateOfBirth)
                    </th>
                    <th>
                        @Html.DisplayNameFor(u => u.CV)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Join in Model)
                {
                    <tr>
                        <td>@Join.Id</td>
                        <td>@Join.Name</td>
                        <td>@Join.Email</td>
                        <td>@Join.PhoneNumber</td>
                        <td>@(Join.Gender == true ? "Male" : "Female") </td>
                        <td>@Join.DateOfBirth</td>
                        @* <td>@Join.CV</td> *@
                        
                       
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="mt-3 p-3 alert-warning">
        <h2>
            There is no Recored
        </h2>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
}